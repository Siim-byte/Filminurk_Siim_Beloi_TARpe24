@using Filminurk.Models.Movies
@model Filminurk.Models.Movies.MoviesCreateViewModel

<h1>Lisa Film</h1>
<div>
	<form method="post" enctype="multipart/form-data">
		<input asp-for="ID" type="hidden" />
		<input asp-for="EntryCreatedAt" type="hidden" />
		<input asp-for="EntryModifiedAt" type="hidden" />

		<div class="form-group row">
			<label asp-for="Title" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Title" class="form-control"/>
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="Description" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Title" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="FirstPublished" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Title" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="Director" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Title" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="CurrentRating" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Title" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="DeadCounter" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Title" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="AliveCounter" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Title" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="ActorCounter" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Title" class="form-control" />
			</div>
		</div>

		<input asp-action="Create" asp-controller="Movies" type="submit" class="btn btn-primary" value="Create"/>

	</form>
</div>